{
  "compilerOptions": {
    "target": "es2019",                      // or at least "es2017"
    "lib": ["es2019"],                       // gives you modern features like async/await
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "exclude": ["**/*.spec.ts"]
}
